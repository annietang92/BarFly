<% provide(:title, 'BarFly | New Drink') %>
<h1>New Drink</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@drink) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.radio_button :type, 'Beer', :checked => true %> 
      <%= label :type, 'Beer' %>
      <%= f.radio_button :type, 'Cocktail' %>
      <%= label :type, 'Cocktail' %><br>

      <%= f.text_field :name, placeholder: "Drink (i.e. Martini)", class: "drinks_tt" %><br>
      <%= f.text_area :comment, placeholder: "Comments?" %>
      <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
    <% end %>
    <%= link_to "Skip", root_path, class: "btn btn-large btn-primary" %>
  </div>
</div>

<script type="text/javascript">
  // Set up typeahead
  var setUpDrinksTypeahead = function() {
      // Initialize typeahead.
      $(".drinks_tt").typeahead({
          name: 'drinks',
          local: <%= @all_drinks.to_s.html_safe %>
      });
  }
  $(document).ready(function(){
    setUpDrinksTypeahead();
  });
</script>