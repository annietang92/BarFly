<li id="<%= feed_item.id %>">
  <%=  link_to image_tag(feed_item.user.picture), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.user.name, feed_item.user %> drank a 
  </span>
  <span class="drink">
    <%= feed_item.name %> (<%=feed_item.type%>)
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span><br>
  <span class="comment">"<%= feed_item.comment %>"</span>
  <% if current_user?(feed_item.user) %>
    <%= link_to "delete", feed_item, method: :delete,
                                     confirm: "You sure?",
                                     title: feed_item.comment %>
  <% end %>
</li><br>