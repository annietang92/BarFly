          <a href="#nav" data-toggle="class:nav-vertical" class="btn btn-sm btn-link m-l-n-sm">
            <i class="fa fa-bars"></i>
          </a>
        </footer>
      </section>
  </aside>
  <div class="row">
    <aside class="span4">

      <%= form_for(@new_drink) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.text_field :name, placeholder: "Whatcha drinking?", class: "drinks_tt form-control" %><br>
        <%= f.text_area :comment, placeholder: "How is it?", class: "form-control" %>
        <%= f.submit "Submit", class: "btn btn-large btn-primary" %>
      <% end %>

      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <%= link_to "New Drink!", new_drink_path, class: "btn btn-large btn-primary" %>
    </aside>
    <div class="span8">
      <h3>Drinks Feed</h3>
      <%= render 'shared/feed' %>
    </div>
