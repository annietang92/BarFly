              <section class="panel clearfix">
                <div class="panel-body">
                  <a href="#" class="thumb pull-left m-r">
                    <img src="images/avatar.jpg" class="img-circle">
                  </a>
                  <div class="clear">
                    <a href="#" class="text-info">@Mike Mcalidek <i class="fa fa-twitter"></i></a>
                    <small class="block text-muted">2,415 followers / 225 tweets</small>
                    <a href="#" class="btn btn-xs btn-success m-t-xs">Follow</a>
                  </div>
                </div>
              </section>

            </div>
          </div>          
        </section>
      </section>
      <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen" data-target="#nav"></a>
    </section>
    <!-- /.vbox -->
<% else %>
  <div class="landing_container">
    <div class="landing_icon">
      <%=image_tag "Icons/icon_final.png", class: "img_rs" %>
    </div>
    <div class="landing_name">
      <%=image_tag "barfly_text.png", class: "img_rs" %>
    </div>
    <div class="description">
      <h2>Social Drinking + Bar Discovery.</h2>
    </div>
    <div class="session_actions">
      <div class="btn-group btn-group-justified">
        <%= link_to "Sign Up", signup_path, class: "btn btn-primary btn-xlarge" %>
        <%= link_to "Log In", signin_path, class: "btn btn-info btn-xlarge" %>
       </div>
     </div>
  </div>
