<% if signed_in? %>
  <!-- .vbox -->
    <section id="content">
      <!-- note -->
          <div class="new_alert bg-purple wrapper hidden-vertical animated fadeInDown">          
              <a href="#" data-dismiss="alert" class="pull-right m-r-n-sm m-t-n-sm"><i class="fa fa-times font_white"></i></a>
              Hello! Welcome to BarFly
          </div>
      <!-- / note -->
      <section class="vbox">
        <section class="scrollable wrapper">
          <div class="row">
            <div class="col-lg-8">
              <section class="panel ">
                <% flash.each do |key, value| %>
                    <div class="alert alert-<%= key %>"><%= value %></div>
                  <% end %>
                <%= form_for(@new_drink) do |f| %>
                  <%= f.text_field :name, placeholder: "Whacha Drinking?", class: "drinks_tt form-control" %>
                  <div class="small_space"></div>
                  <%= f.text_area :comment, placeholder: "Good? Bad?", class: "form-control" %>
                <footer class="panel-footer">
                  <%= f.submit "Submit", class: "btn btn-info pull-right" %>
                  <div class="med_space"></div>
                  <% end %>
                </footer>
              </section>
              <div class="row">
                <div class="col-lg-12">
                  <section class="panel bg-primary lt no-borders">
                      <span class="font_white">Your News Feed</span>
                      <div class="med_vert"></div>
                        <div class="btn-group" data-toggle="buttons">
                        <label class="btn btn-sm btn-info active width_fx">
                          <input type="radio" name="options" id="option1"> <i class="fa fa-check text-active"></i> Local
                        </label>
                        <label class="btn btn-sm btn-primary width_fx">
                          <input type="radio" name="options" id="option2"> <i class="fa fa-check text-active"></i> Friends
                        </label>
                        <label class="btn btn-sm btn-success width_fx">
                          <input type="radio" name="options" id="option3"> <i class="fa fa-check text-active"></i> All
                        </label>
                      </div>
                  </section>
                  <%=render 'widgets/news'%>
                </div>
              </div>
              <div class="text-center m-b">
                <i class="fa fa-spinner fa fa-spin"></i>
              </div>
            </div>
            <div class="col-lg-4">
              <%= render 'widgets/location'%>
