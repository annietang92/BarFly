<% provide(:title, 'BarFly | Sign up') %>
<h1>Sign Up</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, placeholder: "John Smith" %>

      <%= f.label :email %>
      <%= f.text_field :email, placeholder: "johnsmith@test.com" %>

      <%= f.label :city %>
      <%= f.text_field :location, class: "location_tt", placeholder: "Boston, Massachusetts"%>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %><br>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

<%= render 'location_tt_js' %>