<% provide(:title, @venue.name) %>

<section id="content">
  <section class="vbox">
  	<section class="scrollable wrapper">
  		<div class="row">
        	<div class="col-lg-4">
	        	<section class="panel">
	        		<div class="panel-body">
	        			<div class="clearfix text-center">
							<div class="h3 m-b-xs">
								<strong><%= @venue.name%></strong><div class="small_space"></div>
								<small class="text-muted m-b"><i class="fa fa-map-marker"></i> <%= @venue.address%>, <%= @venue.city%>, <%= @venue.state%> <%= @venue.zip%><br><br>
								</small>
							</div>
							Phone: <%=@venue.phone%><br>
							<%if !@venue.url.nil? && @venue.url != "" %>
								Website: <%= link_to @venue.url %>
							<%end%>
						</div>
	        		</div>
	        		<div class="line line-dashed"></div>
	        		<footer>
	        			<div class="col-lg-12">
	        				<div class="bg-danger lter col-lg-6 text-center">
	        					 <br>
	        					 <%=@venue.checkins%> &nbsp; <i class="fa fa-map-marker"></i><br>
	        					 Check-Ins<br><br>
	        				</div>
	        				<div class="bg-warning dker col-lg-6 text-center">
	        					 <br>
	        					 <%=@venue.likes%> &nbsp; <i class="fa fa-heart"></i><br>
	        					 Likes<br><br>
	        				</div>

	        				<%= link_to "Sign Up", signup_path, class: "m-t btn btn-primary btn-xlarge" %>
	        			</div>
	        		</footer>
	        	</section>
        	</div>
        </div>
  	</section>
  </section>
</section>

<h1><%=@venue.name%></h1>
<h1><%=pluralize(@venue.checkins, "check-ins")%></h1>
<h1><%=pluralize(@venue.likes, "likes")%></h1>
<%=@venue.address%><br>
<%=@venue.city%>, <%=@venue.state%> <%=@venue.zip%><br>
<%=@venue.phone%><br><br>
<%= link_to @venue.url %><br>
<%=@venue.description%>